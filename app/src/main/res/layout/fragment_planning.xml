<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.planning.PlanningFragment">

    <TextView
        android:id="@+id/textMonday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Monday"
        app:layout_constraintBottom_toTopOf="@id/mondayMed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/mondayMed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/mondayMed2"
        app:layout_constraintTop_toBottomOf="@id/textMonday"
        app:layout_constraintVertical_bias="0.12"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/text_med1Monday"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Med1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/value_med1Monday"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="value1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/removeBtn_med1_Monday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/addBtn_med1_Monday"
            android:background="@drawable/arrow_down"
            android:backgroundTint="#C5BCBC" />

        <Button
            android:id="@+id/addBtn_med1_Monday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"
            android:backgroundTint="#C5BCBC" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mondayMed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textTuesday"
        app:layout_constraintTop_toBottomOf="@id/mondayMed1"
        app:layout_constraintVertical_bias="0.12"
        tools:layout_editor_absoluteX="16dp">

