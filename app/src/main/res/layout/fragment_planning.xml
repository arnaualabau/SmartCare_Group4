        app:layout_constraintBottom_toTopOf="@id/tuesdayMed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mondayMed2" />

    <RelativeLayout
