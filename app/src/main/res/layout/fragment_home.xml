<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">




    <Button
        android:id="@+id/buttonSensors"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"

        android:text="Sensors"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlanning"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.8"></Button>

    <Button
        android:id="@+id/buttonPlanning"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"

        android:text="Planning"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSensors"
        app:layout_constraintBottom_toTopOf="@+id/buttonEmergency"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.8"></Button>


    <Button
        android:id="@+id/buttonEmergency"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"

        android:text="Emergency"
        android:textSize="25sp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlanning"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.8"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>