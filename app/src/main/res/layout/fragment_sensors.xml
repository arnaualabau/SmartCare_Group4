<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    tools:context=".ui.main.sensors.SensorsFragment">


    <TextView
        android:id="@+id/text_sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="SENSORS"
        android:textStyle="bold"
        android:padding="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/text_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="LIGHT:"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/textview_backgrounddesign"
        app:layout_constraintBottom_toTopOf="@+id/text_lightValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sensors" />

    <TextView
        android:id="@+id/text_lightValue"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="LIGHT VALUE"
        app:layout_constraintBottom_toTopOf="@+id/text_tap"
        app:layout_constraintEnd_toStartOf="@+id/buttonLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_light" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLight"

        android:layout_width="100sp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"

        android:text="Change"
        android:textSize="15sp"
        android:background="@drawable/textview_backgrounddesign"

        app:layout_constraintStart_toEndOf="@id/text_lightValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_light"
        app:layout_constraintBottom_toTopOf="@+id/text_tap"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.8"></androidx.appcompat.widget.AppCompatButton>


    <TextView
        android:id="@+id/text_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="TAP:"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/textview_backgrounddesign"
        app:layout_constraintBottom_toTopOf="@+id/text_tapValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_lightValue"
        />

    <TextView
        android:id="@+id/text_tapValue"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="TAP VALUE"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_presence"
        app:layout_constraintEnd_toStartOf="@+id/buttonTap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTap"

        android:layout_width="100sp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"

        android:background="@drawable/textview_backgrounddesign"
        android:text="Change"
        android:textSize="15sp"

        app:layout_constraintBottom_toTopOf="@id/text_presence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/text_tapValue"

        app:layout_constraintTop_toBottomOf="@id/text_tap"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.8"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/text_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="PRESENCE:"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/textview_backgrounddesign"
        app:layout_constraintBottom_toTopOf="@+id/text_presenceValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tapValue"
        />
    <TextView
        android:id="@+id/text_presenceValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="PRESENCE VALUE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_presence"
        />
</androidx.constraintlayout.widget.ConstraintLayout>